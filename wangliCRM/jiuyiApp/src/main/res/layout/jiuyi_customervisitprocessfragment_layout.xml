<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jiuyi_white"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlTimeline"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tvDot"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_below="@id/tvTopLine"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/jiuyi_white"
                        android:background="@drawable/customer_visit"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="1dp"
                        android:id="@+id/tvLine"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tvDot"
                        android:layout_centerHorizontal="true"
                        android:background="#1995D6" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="签到"
                                    android:textColor="@color/jiuyi_title_color"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/iv_sign"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/sign_in" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:hint="暂无签到"
                                android:textColorHint="@color/jiuyi_info_color"
                                android:textColor="@color/jiuyi_info_color"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlTimeline2"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTopLine2"
                        android:layout_width="1dp"
                        android:layout_height="8dp"
                        android:layout_centerHorizontal="true"
                        android:background="#1995D6" />
                    <TextView
                        android:id="@+id/tvDot2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvTopLine2"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/jiuyi_white"
                        android:background="@drawable/customer_visit"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="1dp"
                        android:id="@+id/tvLine2"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tvDot2"
                        android:layout_centerHorizontal="true"
                        android:background="#1995D6" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_title2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/title2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="沟通记录"
                                    android:textColor="@color/jiuyi_title_color"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/iv_talk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/labeledit" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/subtitle2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="暂无记录"
                                android:textColorHint="@color/jiuyi_info_color"
                                android:textColor="@color/jiuyi_info_color"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlTimeline3"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvTopLine3"
                        android:layout_width="1dp"
                        android:layout_height="8dp"
                        android:layout_centerHorizontal="true"
                        android:background="#1995D6" />
                    <TextView
                        android:id="@+id/tvDot3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/tvTopLine3"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/jiuyi_white"
                        android:background="@drawable/customer_visit"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:paddingBottom="5dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_title3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/title3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="拜访报告"
                                    android:textColor="@color/jiuyi_title_color"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/iv_report"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/labeledit" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/subtitle3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="暂无报告"
                                android:textColorHint="@color/jiuyi_info_color"
                                android:textColor="@color/jiuyi_info_color"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <!-- 进度条 -->
    <include layout="@layout/jiuyi_include_processbarview"/>

</RelativeLayout>
