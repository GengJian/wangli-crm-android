<?xml version="1.0" encoding="utf-8"?>
<!--主界面-->
<com.control.widget.relativeLayout.JiuyiRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jiuyi_relative_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 中间主体部分，放Fragment的 -->
    <RelativeLayout
        android:id="@+id/jiuyi_fragment_container"
        android:layout_marginTop="@dimen/jiuyi_titlebar_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >


            <ImageView
                android:id="@+id/im_lock_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/m_lock_screen"
                 />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tzt_passwordtext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="—   —   —   —"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/tzt_v23_comm_text_color"
                    android:textColorHint="@color/tzt_v23_edit_hint_color"
                    android:textSize="30sp" />

                <com.control.widget.JiuyiEditText
                    android:id="@+id/tzt_edittext"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:background="#F1F0EE"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="#F1F0EE"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tzt_passwordlabletext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="请输入锁屏数字"
                android:textColor="@color/tzt_v23_comm_text_color"
                android:textColorHint="@color/tzt_v23_edit_hint_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tzt_errorpasswordview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/tzt_v23_passwordlock_errorbg"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="无效密码"
                android:textColor="@color/tzt_white"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tzt_errorpasswordresultview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:text="qianhou "
                android:textColor="@color/tzt_v23_comm_text_color"
                android:textSize="16sp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tzt_button1"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="1"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tzt_button2"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:padding="0dp"
                    android:tag="2"
                    android:text="2"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tzt_button3"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="3"
                    android:text="3"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tzt_button4"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="4"
                    android:text="4"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tzt_button5"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="5"
                    android:text="5"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tzt_button6"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="6"
                    android:text="6"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/tzt_button7"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="7"
                    android:text="7"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tzt_button8"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="8"
                    android:text="8"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tzt_button9"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="9"
                    android:text="9"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/jiuyi_lpkeyboard_white_enter"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tzt_button0"
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:background="@drawable/tzt_v23_passwordlock_keyboardbtnbg"
                    android:tag="0"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="50dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/jiuyi_lpkeyboard_white_enter" >

                    <Button
                        android:id="@+id/tzt_delbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jiuyi_lpkeyboard_num_del"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- 标题栏后于主体布局add到tztRelativeLayoutBase -->
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/jiuyi_titlebar_height"
        android:id="@+id/jiuyi_titlebar_layout"
        layout="@layout/jiuyi_titlebar_comm_layout"/>


    <!--&lt;!&ndash; 进度条 &ndash;&gt;-->
    <include layout="@layout/jiuyi_include_processbarview"/>
</com.control.widget.relativeLayout.JiuyiRelativeLayout>

