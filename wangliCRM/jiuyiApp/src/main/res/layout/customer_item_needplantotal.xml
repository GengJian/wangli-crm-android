<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/jiuyi_dividebackgroud_color"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/jiuyi_white_color"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_planno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/jiuyi_title_color" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/line_bg"
        />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
    android:layout_weight="1"
    android:background="@color/jiuyi_white_color"
   >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jiuyi_title_color"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/jiuyi_info2_color"
            android:text="" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_plansend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="2dp"
            android:text="计划(KG)"
            android:gravity="center"
            android:textColor="@color/jiuyi_info2_color" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_actualsend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/jiuyi_needplankg_color" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="实发(KG)"
                android:textColor="@color/jiuyi_info2_color" />

        </LinearLayout>

        <!--<com.jiuyi.tools.TotalPlanRoundlProgresWithNum
            android:id="@+id/Progress_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:max="360"
            android:progress="0"
            app:CustomHasProgressNum="true"
            app:CustomUnReachEnd="270"
            app:CustomUnReachStart="-90"
            app:HorizontalProgresReachColor="@color/jiuyi_blue"
            app:HorizontalProgresTextColor="@color/jiuyi_blue"
            app:HorizontalProgresUnReachColor="#b0dcf3"></com.jiuyi.tools.TotalPlanRoundlProgresWithNum>-->

        <com.jiuyi.tools.BGAProgressBar
            android:id="@+id/Progress_1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:progress="0"
            app:bga_pb_isCapRounded="true"
            app:bga_pb_mode="circle"
            app:bga_pb_radius="24dp"
            app:bga_pb_reachedColor="@color/jiuyi_blue"
            app:bga_pb_reachedHeight="4dp"
            app:bga_pb_textColor="@color/jiuyi_blue"
            app:bga_pb_textSize="14sp"
            app:bga_pb_unReachedColor="#b0dcf3"
            app:bga_pb_unReachedHeight="2dp"/>



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_marginRight="5dp"
            android:src="@drawable/client_arrow"
            />

    </LinearLayout>

</LinearLayout>
</RelativeLayout>