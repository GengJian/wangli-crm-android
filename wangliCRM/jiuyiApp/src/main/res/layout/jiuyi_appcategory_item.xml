<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/jiuyi_dividebackgroud_color"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/ll_debtdetial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/jiuyi_white_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="17dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/jiuyi_vertical_bg_normal" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="办公相关应用"
                android:textColor="@color/jiuyi_title_color"
                android:textSize="16sp" />

        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_categorylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<!--        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_bg"
            />-->


    </LinearLayout>

</RelativeLayout>