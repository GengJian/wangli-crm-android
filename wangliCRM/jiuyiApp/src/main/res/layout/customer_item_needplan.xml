            <com.jiuyi.tools.BGAProgressBar
                android:id="@+id/Progress_1"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:layout_gravity="center"
