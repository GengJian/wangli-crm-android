<?xml version="1.0" encoding="utf-8"?>
<!--主界面-->
<com.control.widget.relativeLayout.JiuyiRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jiuyi_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/jiuyi_titlebar_height"
        android:layout_alignParentTop="true"
        android:id="@+id/jiuyi_titlebar_layout"
        android:visibility="gone"
        layout="@layout/jiuyi_titlebar_customerdetail_layout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textColor="@color/jiuyi_info_color"
            android:textSize="17sp"
            android:text="请点击下面图标新增业务对象" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="25dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_offer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_offer"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新报价" />

            <TextView
                android:id="@+id/tv_add_visit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_visit"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新拜访" />

            <TextView
                android:id="@+id/tv_add_intelligencenew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_intelligencenew"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新情报" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="3"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/tv_add_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_customer"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新客户" />

            <TextView
                android:id="@+id/tv_add_sample_application"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/add_contacts"
                android:gravity="center"
                android:text="新联系人"
                android:textColor="@color/jiuyi_info_color" />

            <TextView
                android:id="@+id/tv_add_contract"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_task"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新任务" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_plan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_delivery_plan"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新计划" />
          <!--  <TextView
                android:id="@+id/tv_add_consultation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/add_demand"
                android:gravity="center"
                android:text="新需求"
                android:textColor="@color/jiuyi_info_color" />-->

            <TextView
                android:id="@+id/tv_add_trip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_business_travel"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新差旅" />
            <TextView
                android:id="@+id/tv_add_dynamic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_sign_in"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新打卡" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_activity"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新建门店" />
            <TextView
                android:id="@+id/tv_add_clue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/add_clue"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新线索" />

            <TextView
                android:id="@+id/tv_add_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:gravity="center"
                android:drawableTop="@drawable/add_business"
                android:drawablePadding="10dp"
                android:textColor="@color/jiuyi_info_color"
                android:text="新商机" />
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/close_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        >
        <TextView
            android:id="@+id/tv_add_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/add_close"
            />
    </RelativeLayout>


</com.control.widget.relativeLayout.JiuyiRelativeLayout>
