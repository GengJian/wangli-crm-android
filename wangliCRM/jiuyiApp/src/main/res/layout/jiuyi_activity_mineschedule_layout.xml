<?xml version="1.0" encoding="utf-8"?>
<!--主界面-->
<com.control.widget.relativeLayout.JiuyiRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/jiuyi_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tzt_whitepage_bgcolor"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/jiuyi_titlebar_layout"
            layout="@layout/jiuyi_titlebar_comm_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/jiuyi_titlebar_height"
            android:layout_alignParentTop="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/jiuyi_titlebar_height"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                style="@style/BlackText.standard"
                android:layout_width="0dp"
                android:layout_height="@dimen/jiuyi_tableline_height"
                android:layout_weight="1"
                android:gravity="center"
                android:text="排序A-Z"
                android:padding="10dp"
                android:drawableRight="@drawable/client_down_n"
                android:textColor="@color/jiuyi_info_color" />
            <TextView
                style="@style/BlackText.standard"
                android:layout_width="0dp"
                android:layout_height="@dimen/jiuyi_tableline_height"
                android:layout_weight="1"
                android:gravity="center"
                android:text="任务类型"
                android:drawableRight="@drawable/client_down_n"
                android:padding="10dp"
                android:textColor="@color/jiuyi_info_color" />
            <TextView
                style="@style/BlackText.standard"
                android:layout_width="0dp"
                android:layout_height="@dimen/jiuyi_tableline_height"
                android:layout_weight="1"
                android:gravity="center"
                android:text="状态"
                android:drawableRight="@drawable/client_down_n"
                android:padding="10dp"
                android:textColor="@color/jiuyi_info_color" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="0dp"
            android:background="@color/line_bg" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/jiuyi_titlebar_height"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_date"
                style="@style/BlackText.standard"
                android:layout_width="120dp"
                android:layout_height="@dimen/jiuyi_tableline_height"
                android:gravity="center"
                android:drawableEnd="@drawable/client_down_n"
                android:textColor="@color/jiuyi_title_color" />
        </LinearLayout>
        <!--<CalendarView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="250dp"-->
            <!--android:background="@color/white">-->
        <!--</CalendarView>-->
        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:calendar_padding="10dp"
            app:current_month_lunar_text_color="#CFCFCF"
            app:current_month_text_color="#333333"
            app:max_year="2030"
            app:min_year="2004"
            app:month_view="com.jiuyi.tools.CustomMonthView"
            app:month_view_show_mode="mode_fix"
            app:other_month_lunar_text_color="#e1e1e1"
            app:other_month_text_color="#e1e1e1"
            app:scheme_text="假"
            app:scheme_text_color="#333"
            app:scheme_theme_color="#128c4b"
            app:selected_lunar_text_color="#fff"
            app:selected_text_color="#fff"
            app:selected_theme_color="@color/jiuyi_blue"
            app:week_background="#fff"
            app:week_start_with="sun"
            app:week_text_color="#e1e1e1"
            app:week_view="com.jiuyi.tools.CustomWeekView"
            app:year_view_day_text_color="#333333"
            app:year_view_day_text_size="9sp"
            app:year_view_month_text_color="#ff0000"
            app:year_view_month_text_size="20sp"
            app:year_view_scheme_color="#f17706" >
        </com.haibin.calendarview.CalendarView>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="0dp"
            android:background="@color/line_bg" />
        <TextView
            android:id="@+id/tv_header"
            style="@style/BlackText.standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@color/white"
            android:padding="10dp"
            android:textColor="@color/jiuyi_title_color" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="0dp"
            android:background="@color/line_bg"/>
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom|right" >
        <ImageButton
            android:id="@+id/ib_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@color/transparent"
            android:src="@drawable/news_add" />
    </LinearLayout>
</com.control.widget.relativeLayout.JiuyiRelativeLayout>
