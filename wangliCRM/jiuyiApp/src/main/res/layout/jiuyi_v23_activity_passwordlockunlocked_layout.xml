<?xml version="1.0" encoding="utf-8"?>
<!--主界面-->
<com.control.widget.relativeLayout.JiuyiRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jiuyi_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 中间主体部分，放Fragment的 -->
    <RelativeLayout
        android:id="@+id/jiuyi_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="45dip"
        android:background="@color/jiuyi_white_color"
        >
        <LinearLayout
            android:id="@+id/tzt_passwordlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tzt_passwordlabletext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:gravity="center"
                android:text="使用指纹或者输入密码"
                android:textColor="@color/jiuyi_title_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tzt_passwordtext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="—   —   —   —"
                    android:textColor="@color/jiuyi_blue"
                    android:textSize="30sp" />

                <com.control.widget.JiuyiEditText
                    android:id="@+id/tzt_edittext"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:background="#F1F0EE"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="#F1F0EE"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/tzt_button1"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="1"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="1"
                        />

                    <Button
                        android:id="@+id/tzt_button2"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="2"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:padding="5dip"
                        android:layout_margin="10dip"
                        android:tag="2"/>

                    <Button
                        android:id="@+id/tzt_button3"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="3"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/tzt_button4"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="4"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="4"/>

                    <Button
                        android:id="@+id/tzt_button5"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="5"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="5"/>

                    <Button
                        android:id="@+id/tzt_button6"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="6"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/tzt_button7"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="7"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="7"/>

                    <Button
                        android:id="@+id/tzt_button8"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="8"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="8"/>

                    <Button
                        android:id="@+id/tzt_button9"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="9"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/tzt_button0"
                        android:layout_width="70dip"
                        android:layout_height="70dip"
                        android:background="@drawable/tzt_v23_passwordlock_circle"
                        android:text="0"
                        android:textColor="@color/jiuyi_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_margin="10dip"
                        android:tag="0"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:gravity="center"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/tzt_delbtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="删除"
                    android:visibility="invisible"
                    android:textColor="@color/jiuyi_blue"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <!-- 标题栏后于主体布局add到tztRelativeLayoutBase -->
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/jiuyi_titlebar_height"
        android:id="@+id/jiuyi_titlebar_layout"
        layout="@layout/jiuyi_titlebar_comm_layout"
        android:visibility="gone"/>


    <!--&lt;!&ndash; 进度条 &ndash;&gt;-->
    <include layout="@layout/jiuyi_include_processbarview"/>
</com.control.widget.relativeLayout.JiuyiRelativeLayout>

