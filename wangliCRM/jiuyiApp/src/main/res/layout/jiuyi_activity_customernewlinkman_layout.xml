<?xml version="1.0" encoding="utf-8"?>
<!--主界面-->
<com.control.widget.relativeLayout.JiuyiRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jiuyi_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tzt_whitepage_bgcolor"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/jiuyi_titlebar_height"
        android:layout_alignParentTop="true"
        android:id="@+id/jiuyi_titlebar_layout"
        layout="@layout/jiuyi_titlebar_completer_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jiuyi_titlebar_layout"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/jiuyi_title_color" />

                <com.control.widget.JiuyiEditText
                    android:id="@+id/et_name"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入姓名(必填)"
                    android:singleLine="true"
                    android:tag="skin_1"
                    android:textColorHint="@color/jiuyi_info_color" />



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:textColor="@color/jiuyi_title_color" />

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:hint="@string/hint_choose"
                    android:paddingEnd="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/jiuyi_title_color"
                    android:textColorHint="@color/jiuyi_info_color" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="116dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:contentDescription="@null"
                    android:src="@mipmap/et_forword" />
            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="客户"
                    android:textColor="@color/jiuyi_title_color" />


                <TextView
                    android:id="@+id/tv_client"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:hint="请选择(必填)"
                    android:paddingEnd="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/jiuyi_title_color"
                    android:textColorHint="@color/jiuyi_info_color" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:contentDescription="@null"
                    android:src="@drawable/client_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="部门"
                    android:textColor="@color/jiuyi_title_color" />
                <TextView
                    android:id="@+id/tv_office"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:hint="@string/hint_choose"
                    android:paddingEnd="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/jiuyi_title_color"
                    android:textColorHint="@color/jiuyi_info_color" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:contentDescription="@null"
                    android:src="@drawable/client_arrow" />

                <!--
                                <com.control.widget.JiuyiEditText
                                    android:id="@+id/et_office"
                                    style="@style/BlackText.standard"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:singleLine="true"
                                    android:hint="请输入部门"
                                    android:tag="skin_1"
                                    android:textColorHint="@color/jiuyi_info_color" />-->


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="职务"
                    android:textColor="@color/jiuyi_title_color" />
                <com.control.widget.JiuyiEditText
                    android:id="@+id/et_duty"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="请输入职务"
                    android:tag="skin_1"
                    android:textColorHint="@color/jiuyi_info_color" />



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="生日"
                    android:textColor="@color/jiuyi_title_color" />

                <TextView
                    android:id="@+id/tv_birthday"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:hint="@string/hint_choose"
                    android:paddingEnd="10dp"
                    android:paddingStart="20dp"
                    android:textColor="@color/jiuyi_title_color"
                    android:textColorHint="@color/jiuyi_info_color" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:contentDescription="@null"
                    android:src="@drawable/client_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="电话"
                    android:textColor="@color/jiuyi_title_color" />


                <com.control.widget.JiuyiEditText
                    android:id="@+id/et_tel"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:background="@null"
                    android:hint="请输入电话号码(必填)"
                    android:singleLine="true"
                    android:tag="skin_1"
                    android:textColorHint="@color/jiuyi_info_color" />

                <ImageButton
                    android:id="@+id/ib_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:contentDescription="@null"
                    android:src="@drawable/client_add" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:id="@+id/ll_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_tel2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_operation2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/phone_delete"/>

                    <com.control.widget.JiuyiEditText
                        android:id="@+id/et_tel2"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:background="@null"
                        android:hint="请输入电话号码"
                        android:singleLine="true"
                        android:tag="skin_1"
                        android:textColorHint="@color/jiuyi_info_color" />
                </LinearLayout>
                <View
                    android:id="@+id/view_tel2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:visibility="gone"
                    android:background="@color/line_bg" />
                <LinearLayout
                    android:id="@+id/ll_tel3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_operation3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/phone_delete"/>
                    <com.control.widget.JiuyiEditText
                        android:id="@+id/et_tel3"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:background="@null"
                        android:hint="请输入电话号码"
                        android:singleLine="true"
                        android:tag="skin_1"
                        android:textColorHint="@color/jiuyi_info_color" />
                </LinearLayout>
                <View
                    android:id="@+id/view_tel3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:visibility="gone"
                    android:background="@color/line_bg" />
                <LinearLayout
                    android:id="@+id/ll_tel4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_topbar_height"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_operation4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/phone_delete"/>
                    <com.control.widget.JiuyiEditText
                        android:id="@+id/et_tel4"
                        style="@style/BlackText.standard"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:background="@null"
                        android:hint="请输入电话号码"
                        android:singleLine="true"
                        android:tag="skin_1"
                        android:textColorHint="@color/jiuyi_info_color" />
                </LinearLayout>
                <View
                    android:id="@+id/view_tel4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:visibility="gone"
                    android:background="@color/line_bg" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="邮箱"
                    android:textColor="@color/jiuyi_title_color" />

                <com.control.widget.JiuyiEditText
                    android:id="@+id/et_email"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入邮箱"
                    android:singleLine="true"
                    android:tag="skin_1"
                    android:textColorHint="@color/jiuyi_info_color" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="常用办公地址"
                    android:textColor="@color/jiuyi_title_color" />


                <com.control.widget.JiuyiEditText
                    android:id="@+id/et_officeaddress"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/hint_writeneed"
                    android:singleLine="true"
                    android:tag="skin_1"
                    android:textColorHint="@color/jiuyi_info_color" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="备用地址"
                    android:textColor="@color/jiuyi_title_color" />


                <com.control.widget.JiuyiEditText
                    android:id="@+id/et_address"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/hint_writechoice"
                    android:singleLine="true"
                    android:tag="skin_1"
                    android:textColorHint="@color/jiuyi_info_color" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="爱好"
                    android:textColor="@color/jiuyi_title_color" />


                <com.control.widget.JiuyiEditText
                    android:id="@+id/et_hobby"
                    style="@style/BlackText.standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/hint_write"
                    android:singleLine="true"
                    android:tag="skin_1"
                    android:textColorHint="@color/jiuyi_info_color" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="在职状态"
                    android:textColor="@color/jiuyi_title_color" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:background="@color/line_bg" />

                <ToggleButton
                    android:id="@+id/tb_status"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/toggle_drawable_selector"
                    android:checked="true"
                    android:textOff="离职"
                    android:textOn="在职" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="重要联系人"
                    android:textColor="@color/jiuyi_title_color" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:background="@color/line_bg" />

                <ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="54dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/toggle_drawable_selector"
                    android:textOff="@null"
                    android:textOn="@null" />


            </LinearLayout>
            <View
                android:id="@+id/view_delcontact"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:visibility="gone"
                android:background="@color/tzt_whitepage_bgcolor" />

            <LinearLayout
                android:id="@+id/ll_delcontact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_topbar_height"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="50dp"
                android:visibility="gone"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_delcontact"
                    style="@style/BlackText.standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="删除联系人"
                    android:textColor="@color/jiuyi_red_color" />
            </LinearLayout>






        </LinearLayout>
    </ScrollView>

    <include layout="@layout/jiuyi_include_processbarview"/>
